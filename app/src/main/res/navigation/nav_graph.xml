<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/calendarFragment">

    <fragment
        android:id="@+id/calendarFragment"
        android:name="com.calendar.app.ui.calendar.CalendarFragment"
        android:label=""
        tools:layout="@layout/fragment_calendar">
        
        <action
            android:id="@+id/action_calendar_to_add_event"
            app:destination="@id/addEventFragment" />
            
        <action
            android:id="@+id/action_calendar_to_day_menu"
            app:destination="@id/dayMenuBottomSheetFragment" />
            
        <action
            android:id="@+id/action_calendar_to_year_month_picker"
            app:destination="@id/yearMonthPickerFragment" />
            
        <action
            android:id="@+id/action_calendar_to_multi_day_selection"
            app:destination="@id/multiDaySelectionFragment" />
            
    </fragment>

    <fragment
        android:id="@+id/yearMonthPickerFragment"
        android:name="com.calendar.app.ui.calendar.YearMonthPickerFragment"
        android:label="Sélectionner mois" />

    <fragment
        android:id="@+id/dayTypesManagementFragment"
        android:name="com.calendar.app.ui.calendar.DayTypesManagementFragment"
        android:label="Types de journées">
        
        <action
            android:id="@+id/action_day_types_to_form"
            app:destination="@id/dayTypeFormFragment" />
            
    </fragment>

    <fragment
        android:id="@+id/dayTypeFormFragment"
        android:name="com.calendar.app.ui.calendar.DayTypeFormFragment"
        android:label="Formulaire type de journée">
        
        <argument
            android:name="dayTypeId"
            app:argType="long"
            android:defaultValue="0L" />
            
    </fragment>

    <fragment
        android:id="@+id/addEventFragment"
        android:name="com.calendar.app.ui.calendar.AddEventFragment"
        android:label="Nouvel événement">
        
        <argument
            android:name="selectedDate"
            app:argType="string"
            android:defaultValue="" />
            
        <argument
            android:name="eventType"
            app:argType="string"
            android:defaultValue="" />
            
    </fragment>

    <dialog
        android:id="@+id/dayMenuBottomSheetFragment"
        android:name="com.calendar.app.ui.calendar.DayMenuBottomSheetFragment"
        android:label="Menu du jour">
        
        <argument
            android:name="selectedDate"
            app:argType="string"
            android:defaultValue="" />
            
        <action
            android:id="@+id/action_day_menu_to_add_event"
            app:destination="@id/addEventFragment" />
            
        <action
            android:id="@+id/action_day_menu_to_day_types"
            app:destination="@id/dayTypeBottomSheetFragment" />
            
        <action
            android:id="@+id/action_day_menu_to_appointment_types"
            app:destination="@id/appointmentTypeBottomSheetFragment" />
            
    </dialog>

    <dialog
        android:id="@+id/dayTypeBottomSheetFragment"
        android:name="com.calendar.app.ui.calendar.DayTypeBottomSheetFragment"
        android:label="Types de journée">
        
        <argument
            android:name="selectedDate"
            app:argType="string"
            android:defaultValue="" />
            
        <action
            android:id="@+id/action_day_type_to_add_event"
            app:destination="@id/addEventFragment" />
            
    </dialog>

    <dialog
        android:id="@+id/appointmentTypeBottomSheetFragment"
        android:name="com.calendar.app.ui.calendar.AppointmentTypeBottomSheetFragment"
        android:label="Types de rendez-vous">
        
        <argument
            android:name="selectedDate"
            app:argType="string"
            android:defaultValue="" />
            
        <action
            android:id="@+id/action_appointment_type_to_add_event"
            app:destination="@id/addEventFragment" />
            
    </dialog>

    <fragment
        android:id="@+id/multiDaySelectionFragment"
        android:name="com.calendar.app.ui.calendar.MultiDaySelectionFragment"
        android:label="Sélection multiple"
        tools:layout="@layout/fragment_multi_day_selection">
        
        <argument
            android:name="displayYear"
            app:argType="integer"
            android:defaultValue="0" />
            
        <argument
            android:name="displayMonth"
            app:argType="integer"
            android:defaultValue="0" />
            
    </fragment>

</navigation>